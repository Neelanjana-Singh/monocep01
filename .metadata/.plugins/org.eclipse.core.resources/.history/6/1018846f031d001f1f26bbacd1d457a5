package com.techlabs.model;

import java.util.Scanner;
import java.util.Random;

public class PigDice1 {
    public static void main(String[] args) {
        PigDice1 pigDice = new PigDice1();
        pigDice.playGame();
    }

    private void playGame() {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        int totalScore = 0;
        int turnCount = 1;
        int total = 0;
        System.out.println("Let's Play PIG!");

        while (totalScore < 20) {
            totalScore = takeTurn(scanner, random, totalScore, turnCount, total);
            turnCount++;
        }

        System.out.println("You finished in " + (turnCount - 1) + " turns!");
        System.out.println("Game over!");

        scanner.close();
    }
    
    private int takeTurn(Scanner scanner, Random random, int totalScore, int turnCount, int total) {
        random.setSeed(System.currentTimeMillis());
        System.out.println("TURN " + turnCount);
        int turnScore = 0;
        boolean turnOver = false;

        while (!turnOver && totalScore < 20) {
            System.out.print("Roll or hold? (r/h): ");
            String choice = scanner.next();

            if (choice.equals("r")) {
                turnScore = rollDice(random);
                totalScore = handleRoll(totalScore, turnScore);
                turnOver = checkTurnOver(totalScore);
            }

            if (choice.equals("h")) {
                total = hold(total, totalScore);
                turnOver = true;
            }

            if (!choice.equals("r") && !choice.equals("h")) {
                printInvalidChoiceMessage();
            }
        }

        return totalScore;
    }
    
    private int rollDice(Random random) {
        int die = random.nextInt(6) + 1;
        System.out.println("Die: " + die);
        return die;
    }
    
    private int handleRoll(int totalScore, int turnScore) {
        if (turnScore == 1) {
            System.out.println("Turn over. No score.");
            return 0;
        }
        return totalScore + turnScore;
    }
    
    private boolean checkTurnOver(int totalScore) {
        return totalScore >= 20;
    }
    
    private int hold(int total, int turnScore) {
        total += turnScore;
        System.out.println("Score for turn: " + turnScore);
        System.out.println("Total score: " + total);
        return total;
    }
    
    private void printInvalidChoiceMessage() {
        System.out.println("Invalid choice:");
    }
}
