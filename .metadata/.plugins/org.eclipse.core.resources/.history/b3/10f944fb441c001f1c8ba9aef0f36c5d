package com.techlabs.model;

import java.util.Random;
import java.util.Scanner;

public class PigDice {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int totalScore = 0;
        System.out.println("Let's Play PIG!");
        while (totalScore < 20) {
            boolean turnOver = false;
            turnOver = methodCreate(turnOver, totalScore, scanner);
        }
        System.out.println("Game over!");
        scanner.close();
    }

    private static boolean methodCreate(boolean turnOver, int totalScore, Scanner scanner) {
        int turnScore = 0;
        while (!turnOver && totalScore < 20) {
            System.out.print("Roll or hold? (r/h): ");
            String choice = scanner.next();
            if (choice.equals("r")) {
                turnScore = method2Create(turnScore, totalScore);
                totalScore += turnScore;
                if (turnScore == 0) {
                    turnOver = true;
                }
            } else if (choice.equals("h")) {
                turnOver = true;
                System.out.println("Score for turn: " + turnScore);
                System.out.println("Total score: " + totalScore);
            } else {
                System.out.println("Invalid choice:");
            }
        }
        return turnOver;
    }

    private static int method2Create(int turnScore, int totalScore) {
        Random random = new Random();
        random.setSeed(System.currentTimeMillis());
        int die = random.nextInt(6) + 1;
        System.out.println("Die: " + die);
        if (die == 1) {
            System.out.println("Turn over. No score.");
            turnScore = 0;
        } else {
            turnScore += die;
        }
        return turnScore;
    }
}
